<%- include("templates/base.ejs", { normalHeader: true }) %>
  <div class="site-content">
    <div class="side-panel homepage-panel">
      <p>user info here??? maybe</p>
      <div id="feeds-panel" class="panel">
        <h2 class="panel-header">
          feeds
        </h2>
        <div class="panel-content">options for posts from friends etc etc</div>
      </div>
      <div id="friends-panel" class="panel">
        <h2 class="panel-header">
          friends
        </h2>
        <div class="panel-content">list of friends and friend requests</div>
      </div>
